# ============================================
# BNI Gestão Imobiliária - Configuração
# ============================================
# Copie este arquivo para .env e preencha com seus valores

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bni_gestao
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ============================================
# Hugging Face
# ============================================
HF_TOKEN=your_huggingface_token_here
HF_DATASET_NAME=senal88/bni-gestao-imobiliaria
HF_DATASET_REVISION=main

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# ============================================
# Obsidian Integration
# ============================================
OBSIDIAN_VAULT_PATH=./obsidian/vault_backup
OBSIDIAN_TEMPLATE_PATH=./obsidian/templates

# ============================================
# Data Paths
# ============================================
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_SCHEMAS_PATH=./data/schemas

# ============================================
# GitHub Actions (para deploy em VPS)
# ============================================
# Configure estes valores como secrets no GitHub:
# - SSH_PRIVATE_KEY
# - SSH_HOST
# - SSH_USER
# - SSH_PORT (padrão: 22)

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/bni_gestao.log

# ============================================
# IFRS Reports
# ============================================
IFRS_REPORTS_PATH=./reports/ifrs
IFRS_REPORTS_FORMAT=pdf

# ============================================
# Security
# ============================================
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1
